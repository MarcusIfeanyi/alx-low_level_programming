#include <unistd.h>
/**
 * _putchar - writes the character c to the standard output
 * @c: This is the char character and the parameter if the fxn
 * Return: 1 on success
 * On error,-1 is retured to the standard output
 * error is set appropriately
 */
int _putchar(char c)
{
	return (write(1, &c, 1);
}
